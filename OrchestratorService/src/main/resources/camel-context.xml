<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
        
          <!-- This is the Camel route which asks for input and aggregates incoming numbers -->
        <camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">
        <route id="from-file-to-employee-inbound">
            <from uri="file:src/data?noop=true"/>
            <to uri="kafka:inbound?brokers=localhost:9092"/>
        </route>
        <route id="from-outbound-employee-topic">
            <from id="kafka_outbound_employee"
                  uri="kafka:outbound?brokers=localhost:9092"/>
            <log id="route-log-consumer-1" message="From  employee outbound topic  >>> ${body}"/>
            <to id="to_file_employee" uri="file:src/data-output?noop=true&amp;fileName=employee-info.json"/>
            <to id="kafka_address_inbound" uri="kafka:edit-inbound?brokers=localhost:9092"/>
        </route>
        <route id="from-outbound-address-topic">
            <from id="kafka-outbound-address"
                  uri="kafka:edit-outbound?brokers=localhost:9092"/>
            <log id="route-log-consumer-2" message="From >>> ${body}"/>
            <to id="to_file_address_output" uri="file:src/data-output?noop=true&amp;fileName=employee-address.json"/>
        </route>
    </camelContext>
</beans>
